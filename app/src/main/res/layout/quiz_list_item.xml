<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/quizTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Title"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/quizIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quizTitleTextView"
        android:layout_marginTop="4dp"
        android:text="Quiz ID"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/scanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quizIdTextView"
        android:layout_marginTop="8dp"
        android:text="Scan"
        android:onClick="onScanButtonClick"/>

    <Button
        android:id="@+id/uploadQRButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scanButton"
        android:layout_marginTop="8dp"
        android:text="Upload"
        android:onClick="onUploadButtonClick"/>

</RelativeLayout>